{namespace guide}

/**
 */
{template .render}
	{@param page: ?}
	{@param site: ?}

	<div class="main">
		<main class="guide">
			<div class="docs">
				{call Topbar.render data="all"}
					{param items: $site.topbar /}
					{param style: 'topbar-light topbar-docs' /}
					{param logo: [
						'text': $site.logo + ' ' + $site.title,
						'href': $site.basePath,
					] /}
				{/call}
				{call Sidebar.render}
					{param section: $site.index.children['docs'] /}
					{param site: $site /}
				{/call}
				{call .guide data="all" /}
			</div>
		</main>
	</div>
{/template}

/**
 */
{template .guide}
	{@param page: ?}
	{@param site: ?}
	{@param content: ?}

	<div class="sidebar-offset">
		<header class="guide-header">
			<div class="container-hybrid">
				<h1 class="title">{$page.title} Guide</h1>
			</div>
		</header>

		<div class="container-hybrid">
			<div class="docs-guide row">
				<div class="docs-content col-xs-16 col-md-9">
					<div class="guide-content">
						{$content}
					</div>

					{if $site.githubRepo}
						{call .contribute data="all" /}
					{/if}
				</div>

				<nav class="col-xs-16 col-md-offset-2 col-md-5">
					<div class="docs-nav-container">
						{call ElectricReadingProgress.render}
							{param elementClasses: 'docs-nav' /}
							{param offsetTop: 200 /}
						{/call}
					</div>
				</nav>
			</div>
		</div>
	</div>
{/template}

/**
 */
{template .contribute}
	{@param page: ?}
	{@param site: ?}

	<div class="contribute">
		<div class="contribute-img">
			<span class="icon-16-github"></span>
		</div>
		<div class="contribute-text">
			<p>Contribute on Github! <a href="https://github.com/{$site.githubRepo}/{$page.srcFilePath}" class="contribute-link" target="_blank">Edit this section</a>.</p>
		</div>
	</div>
{/template}
